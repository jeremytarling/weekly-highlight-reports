<h1>FM&T Vision weekly highlight reports</h1>

<p style="font-weight: bold"><%= link_to 'Create a new report', new_report_path %></p>

<table cellpadding="2" cellspacing="0" border="1">
  <tr>
    <th>Genre</th>
    <th>Date</th>
    <th>Deliveries this week</th>
    <th>Upcoming deliveries</th>
    <th>Successes</th>
    <th>Problems and issues</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td valign="top"><%=h report.genre %></td>
    <td valign="top"><%=h report.date %></td>
    <td valign="top"><%= report.deliveries_this_week %></td>
    <td valign="top"><%= report.upcoming_deliveries %></td>
    <td valign="top"><%= report.successes %></td>
    <td valign="top"><%= report.problems_and_issues %></td>
    <td valign="top"><%= link_to 'Show', report %></td>
    <td valign="top"><%= link_to 'Edit', edit_report_path(report) %></td>
    <td valign="top"><%= link_to 'Destroy', report, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p style="font-weight: bold"><%= link_to 'Create a new report', new_report_path %></p>


